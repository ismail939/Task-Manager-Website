@{
    ViewData["Title"] = "Blog Posts Management";
    Layout = "~/Views/Shared/_layout admin.cshtml";
    
}
@model IEnumerable<Noted.Models.BlogPost>;
<div class="container">
    <h1 class="my-4">Blog Posts Management</h1>
    <a class="btn btn-primary mb-3" href="/admin/blogposts/add">Add New Blog Post</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var post in Model){
            <tr>
                <td>@post.Title</td>
                <td>@post.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="/blogposts/{@post.Id}/edit" class="btn btn-sm btn-warning">Edit</a>
                </td>
                </tr>    
            }
        </tbody>
                    

</div>