@{
    ViewData["Title"] = "Admin Dashboard";
}

<!-- Top Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Admin Panel</a>
    <div class="d-flex">
     <form asp-controller="Admin" asp-action="Logout" method="post" class="d-inline">
        <button type="submit" class="btn btn-outline-light">Logout</button>
    </form>

    </div>
  </div>
</nav>



    <div class="container py-4">
        <h1 class="mb-4">Admin Dashboard</h1>

        <div class="row g-4">
            <!-- Rooms -->
            <div class="col-md-4 col-lg-3">
                <a href="/rooms" class="card-link">
                <div class="card text-white bg-primary shadow h-100">
                    <div class="card-body">
                        <h5 class="card-title">Rooms</h5>
                        <p class="card-text display-6">24</p>
                    </div>
                </div>
            </a>
            </div>

            <!-- Flandara Tables -->
            <div class="col-md-4 col-lg-3">
                <a href="/tables" class="card-link">
                <div class="card text-white bg-success shadow h-100">
                    <div class="card-body">
                        <h5 class="card-title">Flandara Tables</h5>
                        <p class="card-text display-6">12</p>
                    </div>
                </div>
                </a>
            </div>

            <!-- Halls -->
            <div class="col-md-4 col-lg-3">
                <div class="card text-white bg-warning shadow h-100">
                    <div class="card-body">
                        <h5 class="card-title">Halls</h5>
                        <p class="card-text display-6">5</p>
                    </div>
                </div>
            </div>

            <!-- Clients -->
            <div class="col-md-4 col-lg-3">
                <div class="card text-white bg-danger shadow h-100">
                    <div class="card-body">
                        <h5 class="card-title">Clients</h5>
                        <p class="card-text display-6">120</p>
                    </div>
                </div>
            </div>

            <!-- Bookings -->
            <div class="col-md-4 col-lg-3">
                <div class="card text-white bg-info shadow h-100">
                    <div class="card-body">
                        <h5 class="card-title">Bookings</h5>
                        <p class="card-text display-6">45</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

