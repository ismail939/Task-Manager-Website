@{
    ViewData["Title"] = "Halls";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center d-md-gap-0.5 pagebody flex-column flex-md-row mx-0.5">
    <!-- Bootstrap Carousel -->
    <div id="elegantCarouselRoom" data-bs-ride="carousel" data-bs-interval="3000"
        class="carousel slide carousel-fade">
        <div class="carousel-inner g-0">
            <div class="carousel-item active">
                <img src="/images/halls3.jpg" class="w-100 rounded imG" alt="Photo 1">
            </div>

            <div class="carousel-item p-0">
                <img src="/images/halls2.jpg" class="w-100 rounded imG" alt="Photo 2">
            </div>

            <div class="carousel-item">
                <img src="/images/halls1.jpg" class="w-100 rounded imG" alt="Photo 3">
            </div>

            <div class="carousel-item">
                <img src="/images/halls4.jpg" class="w-100 rounded imG" alt="Photo 4">
            </div>
            <div class="carousel-item">
                <img src="/images/halls5.jpg" class="w-100 rounded imG" alt="Photo 4">
            </div>
            <div class="carousel-item">
                <img src="/images/halls6.jpg" class="w-100 rounded imG" alt="Photo 4">
            </div>
            <div class="carousel-item">
                <img src="/images/halls7.jpg" class="w-100 rounded imG" alt="Photo 4">
            </div>
            <div class="carousel-item">
                <img src="/images/halls8.jpg" class="w-100 rounded imG" alt="Photo 4">
            </div>

            <!-- ...continue for others -->
        </div>

        <!-- Optional Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#elegantCarouselRoom" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#elegantCarouselRoom" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </button>

        <!-- Optional Indicators -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#elegantCarouselRoom" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#elegantCarouselRoom" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#elegantCarouselRoom" data-bs-slide-to="2"></button>
            <button type="button" data-bs-target="#elegantCarouselRoom" data-bs-slide-to="3"></button>
            <button type="button" data-bs-target="#elegantCarouselRoom" data-bs-slide-to="4"></button>
            <button type="button" data-bs-target="#elegantCarouselRoom" data-bs-slide-to="5"></button>
            <button type="button" data-bs-target="#elegantCarouselRoom" data-bs-slide-to="6"></button>
            <button type="button" data-bs-target="#elegantCarouselRoom" data-bs-slide-to="7"></button>
        </div>
    </div>
    <div class="d-flex justify-content-center align-items-center flex-column py-2" id="halls-info">
        <h3 class="text-center mb-1 titleFont">Our Halls</h3>
        <p class="text-center text-muted lead italicFont p-4
        ">
            Discover our exquisite halls, perfect for weddings, conferences, and special events. Each hall combines
            elegant design with modern amenities to create a memorable atmosphere for your occasion. Whether you're
            planning an intimate gathering or a grand celebration, our versatile spaces can be tailored to meet your
            needs. Let us help you create unforgettable moments in our stunning halls.
        </p>
    </div>
</div>
<div class="container justify-content-center gap-0.5">
    <div class="row mb-5">
        <h3 class="text-center mb-3 italicFont">Nile Hall</h3>
        <div class="col">
            <img src="/images/halls5.jpg" class="w-100 rounded imG imgRoom" alt="Photo 1">
        </div>
    </div>
    <div class="row mb-5">
        <h3 class="text-center mb-3 italicFont">Open Air</h3>
        <div class="col">
            <img src="/images/halls2.jpg" class="w-100 rounded imG imgRoom" alt="Photo 1">
        </div>
    </div>

</div>