@model IEnumerable<Noted.Models.Room>

@{
    ViewData["Title"] = "All Rooms";
}

<h2 class="text-center">All Rooms</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Room ID</th>
            <th>Number</th>
            <th>Price</th>
            <th>Booked</th>
            <th>Location</th>
            <th>Capacity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var room in Model)
    {
        <tr>
            <td>@room.RoomId</td>
            <td>@room.RoomNumber</td>
            <td>@room.RoomPrice</td>
            <td>@room.RoomBooked</td>
            <td>@room.RoomLocation</td>
            <td>@room.RoomCapacity</td>
            <td>
                <a href="rooms/@room.RoomNumber" class="btn btn-primary">Edit</a>
                    <!-- Delete Button -->
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                        data-bs-target="#deleteModal-@room.RoomNumber">
                        Delete
                    </button>
                    <!-- Modal -->
                    <div class="modal fade" id="deleteModal-@room.RoomNumber" tabindex="-1"
                        aria-labelledby="deleteModalLabel-@room.RoomNumber" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered"> <!-- This centers it vertically -->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteModalLabel-@room.RoomNumber">Confirm Delete</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete room <strong>@room.RoomNumber</strong>?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                                    <form asp-controller="Room" asp-action="DeleteRoom" asp-route-roomNumber="@room.RoomNumber"
                                        method="post">
                                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
            </td>
        </tr>
    }
    </tbody>
</table>


