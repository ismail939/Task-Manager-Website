@model IEnumerable<Noted.Models.Room>

@{
    ViewData["Title"] = "All Rooms";
}

<h2 class="text-center">All Rooms</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Room ID</th>
            <th>Number</th>
            <th>Price</th>
            <th>Booked</th>
            <th>Location</th>
            <th>Capacity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var room in Model)
    {
        <tr>
            <td>@room.RoomId</td>
            <td>@room.RoomNumber</td>
            <td>@room.RoomPrice</td>
            <td>@room.RoomBooked</td>
            <td>@room.RoomLocation</td>
            <td>@room.RoomCapacity</td>
            <td>
                <a href="rooms/@room.RoomNumber" class="btn btn-primary">Edit</a>
                <a href="@Url.Action("DeleteRoom", "Room", new { id = room.RoomId })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>